
<div class="sidebar-module sidebar-module-inset">
  <div class="text-center">
    <a target="_blank" href="<%= frontend_user_path(@blogger) %>">
      <%= image_tag(@blogger.avatar_url, class: 'bloger_photo') %>
    </a>

    <div class="bloger_name">
      <%= @blogger.human_name %>
    </div>
  </div>

  <div class="blogger_info">
    <p class="text-center">
      第<span class="ranking_number"><%= " #{@blogger.ranking} " %></span>位会员
    </p>
    <p>
      浏览:<span class="visits_number"><%= " #{@blogger.visits} " %></span>次
    </p>
    <p>城市:<%= " #{@blogger.city}" %></p>
  </div>
</div>

<div class="sidebar-module">
  <h4>全部分类</h4>
  <ol class="list-unstyled">
    <li><%= link_to "全部文章 (#{@blogger.posts.count})", frontend_user_path(@blogger) %></li>
    <% @categories.each do |category| %>
      <li>
        <%= link_to "#{category.name} (#{Post.where(category: category).count})", frontend_user_category_path(@blogger, category) %>
      </li>
    <% end %>
  </ol>
</div>
