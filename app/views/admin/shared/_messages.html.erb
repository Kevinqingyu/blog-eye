
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>类型</th>
        <th>内容</th>
        <th>发送人</th>
        <th>已读</th>
        <th>管理</th>
      </tr>
    </thead>

    <tbody>
      <% messages.each do |message| %>
        <tr>
          <% if message.target_type == "Reply" %>
            <td>
              <span class="label label-success">文章评论</span>
            </td>
            <td class="href_name">
              <%= link_to message.body, admin_message_path(message), title: message.body %>
            </td>
          <% else %>
            <td><%= message.target_type %></td>
            <td class="href_name">
              <%= link_to message.body, "#", title: message.body %>
            </td>
          <% end %>

          <td><%= message.sender.human_name %></td>
          <td><%= message.is_read %></td>
          <td>
            <%= link_to '删 除', admin_message_path(message), data: { confirm: "你确定要删除这条消息吗？" }, method: :delete, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>

      <tr>
        <td colspan='4'><%= paginate messages %></td>
        <td colspan='2' class="text_middle">
          <div class="pull-right">
            <%= link_to('查看所有', admin_messages_path) unless url_for == admin_messages_path %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
