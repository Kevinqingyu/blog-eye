
<%= simple_form_for [:admin, @post], html: {class: "form-horizontal"} do |f| %>
  <%= f.association :point, collection: Point.all %>
  <%= f.association :category, collection: @categories %>

  <%= f.input :source, collection: sources_collection %>
  <%= f.input :status, collection: statuses_collection %>
  <%= f.input :title %>
  <%= f.input :tags %>

  <div class="form-group">
    <div class="col-md-12">
      <%= f.cktext_area :content, ckeditor: { toolbar: "Easy", height: 380 }  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      可上传的文件格式: <%= Ckeditor.attachment_file_types + Ckeditor.image_file_types %>
    </div>
  </div>

  <div class="form-group form-actions">
    <label class="col-md-3"> </label>
    <div class="col-md-9">
      <%= link_to "取 消", :back, class: "btn btn-inverse" %>
      <%= f.button :submit, "保 存", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
