  
<%= simple_form_for [:admin, @post], html: {class: "form-vertical"} do |f| %>
  <%= f.association :point, collection: Point.all, wrapper_html: { class: "form-group" } %>
  <%= f.association :category, collection: @categories, wrapper_html: { class: "form-group" } %>
  <%= f.input :title, as: :string, wrapper_html: { class: "form-group" } %>
  <%= f.input :content, as: :string, wrapper_html: { class: "form-group" } %>
<% end %>
