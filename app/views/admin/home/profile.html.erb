
<h3>个人资料</h3>

<%= simple_form_for @user, url: admin_update_profile_path, method: :post, 
    html: {class: "form-horizontal"} do |f| %>
  <%= f.input :uid, disabled: true, hint: '用户名注册后不能更改' %>
  <%= f.input :name %>
  <%= f.input :email, disabled: true %>
  <%= f.input :is_email_public %>

  <%= f.input :signature %>
  <%= f.input :city_name  %>
  <%= f.input :company %>

  <%= f.input :github %>
  <%= f.input :homepage %>
  <%= f.input :description %>

  <div class="form-actions text-center">
    <%= f.button :submit, "保 存", class: "btn btn-primary" %>
  </div>
<% end %>
